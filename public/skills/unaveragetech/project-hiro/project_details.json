{
  "name": "Hiro Cryptographic Hieroglyphic Encoder",
  "version": "1.0.0",
  "author": {
    "name": "unaveragetech",
    "github": "unaveragetech",
    "role": "Creator and maintainer"
  },
  "description": "A secure cryptographic system that encodes text messages into hieroglyphic symbols with AES encryption, designed for agent communications and model freedom experiments.",
  "purpose": "Experiment with model freedom through secure, encrypted AI communications using visual hieroglyphic encoding.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unaveragetech/hiro"
  },
  "requirements": {
    "python": ">=3.6.0",
    "dependencies": [
      {
        "name": "cryptography",
        "version": ">=3.0.0",
        "purpose": "AES encryption and cryptographic primitives"
      },
      {
        "name": "psutil",
        "version": ">=5.0.0",
        "purpose": "Hardware fingerprinting for system key derivation"
      }
    ],
    "optional": [
      {
        "name": "tkinter",
        "purpose": "GUI support for Hiro Notepad",
        "note": "Included with Python standard library on most platforms"
      }
    ],
    "system": {
      "os": ["Windows", "macOS", "Linux"],
      "architecture": ["x86_64", "arm64"]
    }
  },
  "features": [
    "Hieroglyphic encoding/decoding",
    "AES encryption with multiple key types",
    "System-derived keys via hardware fingerprinting",
    "Memory-only script execution",
    "CLI and GUI interfaces",
    "Error correction and integrity verification",
    "Addon system for extensibility",
    "Cross-system compatibility"
  ],
  "key_types": [
    {
      "name": "system",
      "description": "Hardware-derived key, unique per machine",
      "shareable": false,
      "default": true
    },
    {
      "name": "password",
      "description": "Key derived from user passphrase",
      "shareable": true,
      "security": "Depends on passphrase strength"
    },
    {
      "name": "aes",
      "description": "Direct AES key (32 bytes)",
      "shareable": true,
      "security": "High, if key is kept secret"
    }
  ],
  "components": [
    {
      "name": "hiro_core.py",
      "type": "script",
      "description": "Core engine and CLI"
    },
    {
      "name": "glyph_runner.py",
      "type": "script",
      "description": "Execution engine for encrypted scripts"
    },
    {
      "name": "hiro_notepad.py",
      "type": "script",
      "description": "GUI notepad application"
    },
    {
      "name": "glyph_core.txt",
      "type": "encrypted_file",
      "description": "Self-contained encoded core implementation"
    }
  ],
  "security": {
    "encryption": "AES-256 with stream cipher",
    "integrity": "SHA3-512 hash verification",
    "execution": "Memory-only, no persistent artifacts",
    "warnings": [
      "Semi-traceless execution poses risks",
      "Only execute trusted .glyph files",
      "Decoding can be a threat vector",
      "Use strong, unique keys"
    ]
  },
  "build_info": {
    "language": "Python",
    "framework": "OpenClaw Skill",
    "last_updated": "2026-02-03",
    "status": "Stable"
  },
  "contact": {
    "github_issues": "https://github.com/unaveragetech/hiro/issues",
    "discord": "unaveragetech"
  }
}