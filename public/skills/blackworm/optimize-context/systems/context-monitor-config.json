{
  "context_monitor": {
    "enabled": true,
    "auto_optimization": {
      "enabled": true,
      "trigger_on_message_count": 30,
      "min_time_between_optimizations_minutes": 10
    },
    "large_task_detection": {
      "enabled": true,
      "token_threshold": 20000,
      "chunk_size": 2000
    },
    "task_splitting": {
      "enabled": true,
      "split_by_paragraphs": true,
      "split_by_sentences": true,
      "fallback_chunking": true
    },
    "logging": {
      "enabled": true,
      "level": "info"
    }
  }
}