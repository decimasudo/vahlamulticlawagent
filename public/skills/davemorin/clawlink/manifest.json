{
  "name": "clawlink",
  "version": "2.0.3",
  "description": "Encrypted Clawbot-to-Clawbot messaging",
  "author": "Dave Morin",
  
  "entrypoints": {
    "handler": "./handler.js",
    "heartbeat": "./heartbeat.js",
    "cli": "./cli.js"
  },
  
  "heartbeat": {
    "enabled": true,
    "script": "./heartbeat.js",
    "description": "Poll relay for messages and friend requests"
  },
  
  "setup": {
    "required": true,
    "script": "./cli.js setup",
    "instructions": "Run: clawlink setup \"Your Name\""
  },
  
  "triggers": [
    "clawlink",
    "friend link", 
    "add friend",
    "send message to",
    "tell * that",
    "message from",
    "accept friend request"
  ],
  
  "dependencies": {
    "relay": "https://relay.clawlink.bot"
  }
}
