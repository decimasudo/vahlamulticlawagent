{
  "human_name": "Your Human",
  "data_source": "~/Library/Mobile Documents/com~apple~CloudDocs/Health Auto Export",
  "data_dir": "./data",
  "import_interval": "hourly",
  "alert_channel": "telegram",
  "thresholds": {
    "temperature_high_f": 100.4,
    "temperature_low_f": 96.0,
    "heart_rate_high": 120,
    "heart_rate_low": 50,
    "blood_pressure_systolic_high": 140,
    "blood_pressure_diastolic_high": 90,
    "spo2_low": 92
  },
  "baseline_period_days": 14,
  "alert_on": [
    "temperature_deviation",
    "heart_rate_anomaly",
    "sleep_degradation",
    "blood_pressure_spike"
  ]
}
