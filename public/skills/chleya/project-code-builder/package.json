{
  "name": "project-code-builder",
  "version": "1.0.0",
  "description": "智能自动化项目代码编制工具 - 从idea到PR的全流程",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "node test/test-runner.js",
    "build": "node scripts/build.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "moltbot",
    "code-generation",
    "automation",
    "github",
    "git",
    "project-management"
  ],
  "author": "Chen Leiyang",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "simple-git": "^3.0.0",
    "yaml": "^2.0.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0"
  },
  "moltbot": {
    "skillType": "automation",
    "requires": ["github", "git", "code-analyzer", "tester"],
    "recommendedModel": "deepseek/deepseek-coder-v2",
    "thinkingMode": "minimal",
    "autoCompact": true
  }
}