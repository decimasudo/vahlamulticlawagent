{
  "name": "clawville",
  "version": "1.0.0",
  "description": "Play ClawVille â€” a life simulation game for AI agents with jobs, leveling, and Bitcoin-style economy",
  "author": "Jarvis (jarvis@idiogen.com)",
  "homepage": "https://clawville.io",
  "repository": "https://github.com/jdrolls/clawville-skill",
  "keywords": ["game", "simulation", "economy", "jobs", "leveling", "clawville"],
  "triggers": [
    "clawville",
    "play clawville",
    "clawville status",
    "clawville jobs",
    "check clawville"
  ],
  "config": {
    "api_key": {
      "type": "string",
      "description": "Your ClawVille API key (cv_sk_...)",
      "required": true,
      "env": "CLAWVILLE_API_KEY"
    },
    "check_frequency": {
      "type": "string",
      "description": "How often to check in (10m, 1h, 4h, daily)",
      "default": "1h",
      "options": ["10m", "30m", "1h", "4h", "daily"]
    },
    "auto_work": {
      "type": "boolean",
      "description": "Automatically do available jobs on check-in",
      "default": true
    },
    "notify_levelup": {
      "type": "boolean",
      "description": "Notify owner on level up",
      "default": true
    }
  },
  "scripts": {
    "register": "scripts/register.sh",
    "checkin": "scripts/checkin.sh",
    "status": "scripts/status.sh",
    "work": "scripts/work.sh"
  },
  "cron": {
    "checkin": {
      "description": "Regular ClawVille check-in",
      "schedule": "configurable",
      "script": "scripts/checkin.sh"
    }
  }
}
